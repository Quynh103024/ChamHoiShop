@{
    ViewData["Title"] = "Sign Up";



    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Sign Up Page -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
            <div class="bg-light p-5 rounded shadow-sm">
                <h3 class="text-center mb-4">Create Your Account</h3>
                <p class="text-center text-muted">Join our community by signing up</p>
                <form asp-action="Register" asp-controller="Account" method="post">
                    <div class="form-group mb-4">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email address" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Create a password" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="confirmPassword" class="form-label">Confirm Password</label>
                        <input type="password" id="confirmPassword" name="checkPassword" class="form-control" placeholder="Confirm your password" required />
                    </div>
                    @if (TempData["SignUpError"] != null)

                    {
                        <div class="text-danger text-center mb-3">
                            @TempData["SignUpError"]
                        </div>
                    }
                    <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
                </form>
                <div class="text-center mt-4">
                    <p class="text-muted">Already have an account? <button class="btn btn-link p-0 text-primary" onclick="location.href='@Url.Action("Login", "Account")'">Login</button></p>
                </div>
            </div>
        </div>
    </div>
</div>
