@{
    ViewData["Title"] = "Login";



    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Login Page -->
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-6 offset-lg-3 col-md-8 offset-md-2">
            <div class="bg-light p-5 rounded shadow-sm">
                <h3 class="text-center mb-4">Welcome Back!</h3>
                <p class="text-center text-muted">Please login using your account</p>
                <form asp-action="Login" asp-controller="Account" method="post">
                    <div class="form-group mb-4">
                        <label for="username" class="form-label">Username</label>
                        <input type="text" id="username" name="username" class="form-control" placeholder="Enter your username" required />
                    </div>
                    <div class="form-group mb-4">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
                    </div>
                    @if (TempData["LoginError"] != null)

                    {
                        <div class="text-danger text-center mb-3">
                            @TempData["LoginError"]
                        </div>
                    }
                    <div class="form-group d-flex justify-content-between">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-primary">Forgot Password?</a>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Login</button>
                </form>
                <div class="text-center mt-4">
                    <p class="text-muted">Don't have an account? <button class="btn btn-link p-0 text-primary" onclick="location.href='@Url.Action("SignUp", "Account")'">Sign Up</button></p>
                </div>
            </div>
        </div>
    </div>
</div>
